<div><%= work.diary.date %></div>
<div>
  <span><%= work.category&.name %></span>
  <span><%= work.title %></span>
</div>
<div><%= work.body %></div>

<div>
  <%= form_with(model: [work, memo], url: work_memo_path, local: true) do |form| %>
    <div><%= form.text_area :body %></div>
    <% if form.object.persisted? %>
      <div><%= form.submit '更新'  %></div>
    <% else %>
      <div><%= form.submit '登録'  %></div>
    <% end %>
  <% end %>
</div>