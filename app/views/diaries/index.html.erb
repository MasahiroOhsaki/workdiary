<h1>日誌</h1>

<div class="navigation-space">
  <hr>
  <hr>
</div>

<div class="content-wrapper mx-2">
  <% @diaries.each do |diary| %>
    <div class="diary-container pt-2">
      <div>
        <%= link_to diary.date, diary_path(diary) %>
        <%= link_to "Add Work", new_diary_work_path(diary), class: "btn btn-dark btn-sm" %>
      </div>
      <div class="mx-2"><%= diary.body %></div>
      
      <% diary.works.each do |work| %>
        <div class="work-container border rounded border-primary ml-2 my-1">
          <div class="work-bodies">
            <div>
              <i class="fa fa-tag mr-1"></i><%= work.category&.name %>
              <i class="fa fa-briefcase mx-1"></i><%= work.title %>
            </div>
            <div class="row">
              <div class="col-8">
                <i class="fa fa-clipboard mr-1"></i>
                <%= work.body %>
              </div>
            </div>
            <div class="col-4">
              <%= work.image %>
            </div>
          </div>
          <div class="work-options">
            <%= link_to "edit", edit_diary_work_path(diary, work) %>
            <%= link_to "delete", diary_work_path(diary, work), method: :delete, data: {confirm: "このワークを消して大丈夫？"} %>
            <%= link_to_if(work.memo.nil?, "＋メモを追加", new_work_memo_path(work)) {} %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>